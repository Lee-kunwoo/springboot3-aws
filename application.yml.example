# ===========================================
# Spring Boot Blog Application 설정 예제
# ===========================================
#
# 사용법:
# 1. 이 파일을 src/main/resources/application.yml로 복사
# 2. 환경변수를 설정하거나 직접 값을 입력
# 3. Git에는 application.yml을 커밋하지 마세요!
#
# ===========================================

server:
  port: 5000

spring:
  datasource:
    driver-class-name: org.postgresql.Driver
    # 환경변수 사용 (권장)
    url: ${DB_URL}
    username: ${DB_USERNAME}
    password: ${DB_PASSWORD}

    # 또는 직접 입력 (테스트용, 실제 배포 시 환경변수 사용)
    # url: jdbc:postgresql://your-host:5432/your-database
    # username: your-username
    # password: your-password

  jpa:
    hibernate:
      # 옵션: create, create-drop, update, validate, none
      ddl-auto: update
    properties:
      hibernate:
        dialect: org.hibernate.dialect.PostgreSQLDialect
        format_sql: true
    show-sql: true

  thymeleaf:
    cache: false

# ===========================================
# OAuth2 설정은 WebOAuthSecurityConfig.java에서
# 환경변수로 관리됩니다
# ===========================================
